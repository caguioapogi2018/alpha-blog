<center>
<h1>Article Bloggers</h1>
  <div class="center">
    <%= will_paginate %>   <!--#THIS IS FOR PAGINATION-->
  </div>
<% @users.each do |user| %>

  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small> <%= pluralize(user.articles.count, "articles") if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
          <li><%= link_to 'Delete this User', user_path(user), method: :delete, data: { confirm: "Are you sure to delete this user and delete all user articles?"} %></li>
          <% end %>
      </div>
    </div>
  </ul>
<% end %>

  <div class="center">
    <%= will_paginate %>
  </div>
</center>