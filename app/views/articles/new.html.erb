<h1><center>CREATE AN ARTICLE</center></h1>

<%= form_for @article do |f| %>
<center>
  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>


</center>

<% end %>